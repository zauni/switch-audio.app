{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "switch-audio",
  "version": "0.1.0",
  "identifier": "com.mzaunseder.switch-audio",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "switch-audio",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "assets/headset-muted.png",
      "assets/headset.png",
      "assets/laptop-muted.png",
      "assets/laptop.png"
    ],
    "macOS": {
      "signingIdentity": "Apple Development: Matthias Zaunseder (GT5FA8J4LF)",
      "dmg": {
        "appPosition": {
          "x": 180,
          "y": 170
        },
        "applicationFolderPosition": {
          "x": 480,
          "y": 170
        },
        "windowSize": {
          "height": 400,
          "width": 660
        }
      },
      "hardenedRuntime": true,
      "minimumSystemVersion": "10.13"
    }
  }
}
